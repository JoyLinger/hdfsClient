bin=`dirname "$0"`
bin=`cd "$bin">/dev/null; pwd`

export BASE_DIR=$bin/..
export HADOOP_HOME=$BASE_DIR/hadoop
export HADOOP_CONF=$BASE_DIR/conf/hadoop/conf
export HADOOP_CONF_DIR=$BASE_DIR/conf/hadoop/conf
export HADOOP_COMMON_HOME=$BASE_DIR/hadoop
export HADOOP_HDFS_HOME=$BASE_DIR/hadoop-hdfs
export HADOOP_MAPRED_HOME=$BASE_DIR/hadoop-mapreduce
export YARN_HOME=$BASE_DIR/hadoop-yarn
export HADOOP_YARN_HOME=$BASE_DIR/hadoop-yarn

